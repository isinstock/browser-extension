{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "npm",
  "tasks": [
      {
          "label": "install",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["install"]
      },
      {
          "label": "update",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["update"]
      },
      {
          "label": "test",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["run", "test"]
      },
      {
          "label": "development - build",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["run", "build", "${input:runTestFlags}"]
      },
      {
          "label": "development - watch",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["run", "watch"]
      },
      {
          "label": "production - build",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["run", "build", "--", "--production", "${input:runTestFlags}"]
      },
      {
          "label": "production - watch",
          "type": "shell",
          "group": "build",
          "command": "npm",
          "args": ["run", "watch", "--", "--production"]
      }
  ],
  "inputs": [
    {
      "id": "runTestFlags",
      "type": "pickString",
      "description": "Additional flags:",
      "default": "",
      "options": ["", "--ci"]
    }
  ]
}
